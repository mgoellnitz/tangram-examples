<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
  
  <display-name>not working Tangram GAE Example using JPA with DataNucleus - dinistiq version</display-name>

  <!-- basic dinistiq web setup -->
  <listener>
    <listener-class>dinistiq.web.DinistiqContextLoaderListener</listener-class>
  </listener>
  <context-param>
    <param-name>dinistiq.packages</param-name>
    <param-value>
      org.tangram.components
    </param-value>
  </context-param>
  
  <servlet>
    <servlet-name>dinistiq</servlet-name>
    <servlet-class>dinistiq.web.DinistiqServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>dinistiq</servlet-name>
    <url-pattern>/s/*</url-pattern>
  </servlet-mapping>

  <!-- integrate remote API to let the data importer work -->
  <servlet>
    <servlet-name>remoteapi</servlet-name>
    <servlet-class>com.google.apphosting.utils.remoteapi.RemoteApiServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>remoteapi</servlet-name>
    <url-pattern>/remote_api</url-pattern>
  </servlet-mapping>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>remoteapi</web-resource-name>
      <url-pattern>/remote_api</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>
  
  <!-- TODO: Character Encoding Filter -->

  <!-- tangram password filter -->
  <filter>
    <filter-name>TangramProtections</filter-name>
    <filter-class>org.tangram.components.dinistiq.TangramPasswordFilter</filter-class>
    <init-param>
      <param-name>free.urls</param-name>
      <param-value>
        /s/stats
      </param-value>
    </init-param>
    <!-- remove this parameter if you don't want generic login for all pages
    -->
    <init-param>
      <param-name>allowed.users</param-name>
      <param-value>
        test@example.com
      </param-value>
    </init-param>
    <init-param>
      <param-name>admin.users</param-name>
      <param-value>
        test@example.com
      </param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>TangramProtections</filter-name>
    <url-pattern>/s/*</url-pattern>
  </filter-mapping>  
  
  <!-- tangram measure time filter -->
  <filter>
    <filter-name>TangramMeasureTime</filter-name>
    <filter-class>org.tangram.servlet.MeasureTimeFilter</filter-class>
    <init-param>
      <param-name>free.urls</param-name>
      <param-value>
        /s/stats
      </param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>TangramMeasureTime</filter-name>
    <url-pattern>/s/*</url-pattern>
  </filter-mapping>  
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>
