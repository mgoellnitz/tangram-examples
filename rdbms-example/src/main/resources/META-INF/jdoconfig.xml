<?xml version="1.0" encoding="utf-8"?>
<jdoconfig xmlns="http://java.sun.com/xml/ns/jdo/jdoconfig"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:noNamespaceSchemaLocation="http://java.sun.com/xml/ns/jdo/jdoconfig">

   <persistence-manager-factory name="transactions-optional">
       <property name="javax.jdo.PersistenceManagerFactoryClass"
           value="org.datanucleus.api.jdo.JDOPersistenceManagerFactory"/>
       <!-- odf example - does not support arrays like we use for text and the like
       <property name="javax.jdo.option.ConnectionURL" value="odf:file:myfile.ods"/>
       -->
       <!-- xls example - does not support arrays like we use for text and the like
       <property name="javax.jdo.option.ConnectionURL" value="excel:file:myfile.xls"/>
       -->
       <!-- postgresql example
       <property name="javax.jdo.option.ConnectionDriverName" value="org.postgresql.Driver" />
       <property name="javax.jdo.option.ConnectionURL" value="jdbc:postgresql://localhost:5432/postgres"/>
       <property name="javax.jdo.option.ConnectionUserName" value="tex" />
       <property name="javax.jdo.option.ConnectionPassword" value="tex" />
       <property name="javax.jdo.option.Mapping" value="postgres" />
       -->
       <!-- jndi datasource example (run@cloudbees)
       Connect Database with application with bees tool:
      
      bees app:bind -db <DBNAME> -a <APPID> -as tangramdb
       
       <property name="datanucleus.ConnectionFactoryName" value="java:comp/env/jdbc/tangramdb" />
       -->
       <!-- hsqldb example - content provided
       -->
       <property name="javax.jdo.option.ConnectionDriverName" value="org.hsqldb.jdbcDriver" />
       <property name="javax.jdo.option.ConnectionURL" value="jdbc:hsqldb:file:tangram-rdbms"/>
       <property name="javax.jdo.option.ConnectionUserName" value="sa" />
       <property name="javax.jdo.option.ConnectionPassword" value="" />
       <property name="javax.jdo.option.Mapping" value="hsqldb" />
       
       <!-- common stuff -->
       <property name="datanucleus.autoCreateSchema" value="true" />
       <property name="datanucleus.validateTables" value="true" />
       <property name="datanucleus.manageRelationships" value="true" />
       <property name="datanucleus.validateConstraints" value="true" />
   </persistence-manager-factory>

</jdoconfig>
